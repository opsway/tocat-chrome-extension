    "tabs",
    "identity"
  ],
  "background": {
    "scripts": ["js/background.js", "js/tools.js"],
    "persistent": false
  },
  "oauth2": {
    "client_id": "350509609869-hapn0968fr5nl8kq2385a1ci5cp3j19j.apps.googleusercontent.com",
    "scopes": [
      "https://www.googleapis.com/auth/userinfo.email"
    ]
  }
}
