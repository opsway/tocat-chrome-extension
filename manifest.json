{
  "manifest_version": 2,
  "name":"TOCAT",
  "version":"0.7",
  "description":"TOCAT plugin",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "TOCAT",
    "default_popup": "index.html"
