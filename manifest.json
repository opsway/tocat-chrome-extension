{
  "manifest_version": 2,
  "name":"TOCAT",
  "version":"0.7",
  "description":"TOCAT plugin",
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "TOCAT",
    "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "https://tocat.opsway.com/*",
    "tabs"
  ],
  "background": {
    "scripts": ["js/background.js", "js/tools.js"],
    "persistent": false
  },
  "icons": {
    "16": "16.png",
    "48": "48.png",
    "128": "128.png"
  }
}
